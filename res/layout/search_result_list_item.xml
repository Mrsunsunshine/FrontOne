<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/btn_list_item_bg"
    android:orientation="horizontal"
    android:gravity="center"
    android:padding="8dp" >

    <ImageView android:id="@+id/search_list_item_img"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_centerVertical="true"
        android:src="@drawable/icon_poi_history" />
    
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="5dp"
        android:layout_toRightOf="@id/search_list_item_img"
        android:background="@drawable/btn_list_item_bg"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/search_list_item_title"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:text="钟楼"
            android:textSize="@dimen/text_middle" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="5dp"
            android:layout_weight="3"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/search_list_item_city"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:text="西安市"
                android:textColor="#999999"
                android:textSize="@dimen/text_small" />

            <TextView
                android:id="@+id/search_list_item_district"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginLeft="20dp"
                android:gravity="center_vertical"
                android:text="莲湖区"
                android:textColor="#999999"
                android:textSize="@dimen/text_small" />
        </LinearLayout>
    </LinearLayout>

</RelativeLayout>