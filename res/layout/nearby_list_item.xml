<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    android:gravity="center"
    android:paddingTop="8dp"
    android:paddingBottom="8dp"
    android:paddingLeft="5dp"
    android:paddingRight="5dp" >
    
    <ImageView 
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:src="@drawable/icon_bus_station" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="5dp"
        android:padding="2dp"
        android:orientation="vertical" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="horizontal"
            android:layout_marginBottom="5dp" >

            <TextView
                android:id="@+id/nearby_listitem_name"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center_vertical"
                android:singleLine="true"
                android:text="1.公交站点名"
                android:textSize="@dimen/text_middle" />

            <TextView
                android:id="@+id/nearby_listitem_distance"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="6"
                android:gravity="center"
                android:singleLine="true"
                android:text="3.2千米"
                android:textColor="@color/light_gray_text"
                android:textSize="12sp" />
        </LinearLayout>

        <TextView
            android:id="@+id/nearby_listitem_info"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1.5"
            android:gravity="center_vertical"
            android:singleLine="true"
            android:text="Station Information"
            android:textSize="@dimen/text_small"
            android:textColor="@color/light_black_text" />
    </LinearLayout>

</LinearLayout>