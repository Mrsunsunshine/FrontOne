<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <com.baidu.mapapi.map.MapView
        android:id="@+id/mapfragment_mapView"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:clickable="true" />

    <!-- widgets -->

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:padding="10dp" >

        <!-- location -->

        <LinearLayout
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="5dp"
            android:background="@drawable/main_widget_locatebutton_selector"
            android:gravity="center"
            android:orientation="vertical" >

            <ImageButton
                android:id="@+id/mapfragment_location"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="#00FFFFFF"
                android:src="@drawable/main_icon_location" />
        </LinearLayout>

        <!-- zoom -->

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="5dp"
            android:background="@drawable/main_widget_locatebutton_selector"
            android:orientation="vertical" >

            <ImageButton
                android:id="@+id/mapfragment_zoom_in"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:background="@drawable/main_widget_bottombutton_selector"
                android:padding="5dp"
                android:src="@drawable/main_icon_zoomin" />

            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:background="#C0CCCCCC"
                android:padding="8dp" />

            <ImageButton
                android:id="@+id/mapfragment_zoom_out"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:background="@drawable/main_widget_bottombutton_selector"
                android:padding="5dp"
                android:src="@drawable/main_icon_zoomout" />
        </LinearLayout>
    </RelativeLayout>

</FrameLayout>